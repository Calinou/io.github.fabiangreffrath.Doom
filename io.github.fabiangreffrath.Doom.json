{
    "app-id": "io.github.fabiangreffrath.Doom",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "crispy-doom",
    "finish-args": [
        "--device=dri",
        "--socket=wayland",
        "--socket=fallback-x11",
        "--share=ipc",
        "--share=network",
        "--socket=pulseaudio",
        "--filesystem=home:ro"
    ],
    "rename-icon": "crispy-doom",
    "modules": [
        {
            "name": "crispy-doom",
            "buildsystem": "autotools",
            "sources": [
                {
                    "type": "git",
                    "url": "https://github.com/fabiangreffrath/crispy-doom.git",
                    "tag": "crispy-doom-5.8.0",
                    "commit": "a87c2f73392099179c88143c0bc2d019fb456cdd"
                },
                {
                    "type": "patch",
                    "path": "metainfo.patch"
                }
            ],
            "cleanup": [
                "/share/applications/screensavers",
                "/share/applications/io.github.fabiangreffrath.Heretic.desktop",
                "/share/applications/io.github.fabiangreffrath.Setup.desktop",
                "/share/icons/hicolor/128x128/apps/crispy-setup.png",
                "/share/metainfo/io.github.fabiangreffrath.Heretic.metainfo.xml"
            ]
        }
    ]
}
